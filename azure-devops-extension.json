{
    "manifestVersion": 1,
    "id": "build-hub",
    "publisher": "TheCliffFace",
    "version": "1.0.50",
    "name": "Pipelines Hub",
    "description": "Extension to bring together a bunch of commonly needed tasks for Azure Devops on one screen.",
    "categories": [
        "Azure Pipelines"        
    ],
    "public": true,
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "icons": {
        "default": "logo.png"
    },
    "content": {
        "details": {
            "path": "README.md"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/TheCliffFace/azure-devops-build-hub"
    },
    "files": [
        {
            "path": "static",
            "addressable": true
        },
        {
            "path": "dist",
            "addressable": true
        },
        {
            "path": "screenshots",
            "addressable": true
        }
    ],
    "scopes": [
        "vso.build"
    ],
    "tags": [
        "build",
        "deployment",
        "pipelines"
    ]
}